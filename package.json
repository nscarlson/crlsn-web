{
    "name": "crlsn",
    "version": "0.0.0",
    "private": true,
    "workspaces": {
        "nohoist": [
            "**/leash-stack"
        ],
        "packages": [
            "packages/*",
            "projects/*"
        ]
    },
    "devDependencies": {
        "casual": "^1.5.19",
        "danger": "^3.7.20",
        "danger-plugin-jira-issue": "^1.3.0",
        "git-cz": "^1.7.1",
        "lerna": "^2.11.0",
        "lint-staged": "^7.2.0",
        "npm-run-all": "^4.1.3",
        "shared-git-hooks": "^1.2.1"
    },
    "engines": {
        "node": ">=8.9.4 <10.0.0",
        "yarn": "^1.3.0"
    },
    "scripts": {
        "build": "docker-compose -f docker-compose.yml build",
        "clean": "rm -rf node_modules; rm -rf packages/*/node_modules; rm -rf projects/*/node_modules",
        "commit": "git-cz",
        "dev": "yarn docker:build && docker-compose up --build",
        "dev:migrate": "docker exec tesseract_shapeshift-auth_1 yarn db:init",
        "docker:build": "./build.sh",
        "docker:dev": "yarn docker:build && yarn docker:run",
        "docker:prune": "docker system prune -af --volumes && docker rmi $(docker images -a -q)",
        "docker:run": "docker run -it crlsn:latest",
        "docker:rm-untagged-images": "docker rmi $(docker images | grep \"^<none>\" | awk '{print $3}')",
        "down": "docker-compose down",
        "test": "jest --config ./packages/leash-stack/jest.config.js",
        "up": "docker-compose up",
        "vault:login": "uni-tool.js s $SHELL"
    },
    "uniconfig": {
        "approle": "service-read-all"
    }
}
