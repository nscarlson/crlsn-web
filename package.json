{
    "name": "nthn.crlsn",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "lerna run build",
        "build:docker": "docker build -t source .",
        "predev": "yarn dev:docker",
        "dev": "yarn dev:local",
        "dev:compose": "docker-compose",
        "dev:docker": "yarn -s dev:up nginx",
        "dev:docker:compose": "docker-compose",
        "dev:local": "lerna run dev --stream",
        "dev:up": "yarn -s dev:compose up --build --detach",
        "down": "docker-compose down",
        "tsc": "tsc"
    },
    "eslintConfig": {
        "extends": "@crlsn"
    },
    "eslintIgnore": [
        "coverage",
        "dist",
        "build",
        ".next",
        "node_modules"
    ],
    "workspaces": [
        "packages/*",
        "projects/*"
    ],
    "devDependencies": {
        "lerna": "3.20.2",
        "npm-run-all": "4.1.5"
    },
    "dependencies": {
        "@types/react": "^16.9.23",
        "now": "17.0.4"
    }
}
